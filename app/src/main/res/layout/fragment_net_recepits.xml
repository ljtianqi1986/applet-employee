<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/mPieChart"
            android:layout_width="match_parent"
            android:layout_height="340dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <View
                    android:id="@+id/line1"
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#7ed6ff"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值实收(元)"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/line1"
                    android:layout_alignTop="@id/line1"/>
                <TextView
                    android:id="@+id/recharge_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/line1"
                    android:layout_alignBottom="@+id/line1"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:id="@+id/line2"
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#ff777a"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开卡实收(元)"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/line2"
                    android:layout_alignTop="@id/line2"/>
                <TextView
                    android:id="@+id/open_card_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/line2"
                    android:layout_alignBottom="@+id/line2"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <View
                    android:id="@+id/line3"
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#ffd972"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品实收(元)"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/line3"
                    android:layout_alignTop="@id/line3"/>
                <TextView
                    android:id="@+id/product_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/line3"
                    android:layout_alignBottom="@+id/line3"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:id="@+id/line4"
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#b197fc"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目实收(元)"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/line4"
                    android:layout_alignTop="@id/line4"/>
                <TextView
                    android:id="@+id/project_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/line4"
                    android:layout_alignBottom="@+id/line4"/>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>