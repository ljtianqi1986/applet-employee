<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/member"/>

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon">

        <TextView
            android:id="@+id/cash_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="@color/text_normal"
            android:text="面部黑脸娃娃110元/次"/>

        <EditText
            android:id="@+id/right_text"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:gravity="right|center_vertical"
            android:background="@null"
            android:text="300.0"/>


        <TextView
            android:id="@+id/tv_technician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cash_name"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="服务技师"/>

        <TextView
            android:id="@+id/tv_worker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cash_name"
            android:layout_marginTop="2dp"
            android:drawableRight="@mipmap/more"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:layout_toRightOf="@+id/tv_technician"
            android:text="小能手"/>

        <CheckBox
            android:id="@+id/cb_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_worker"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不折扣"
            android:layout_marginTop="8dp"
            android:textColor="@color/light_gray"
            android:layout_toRightOf="@+id/cb_sale"
            android:layout_below="@id/tv_worker"/>

        <TextView
            android:id="@+id/is_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/right_text"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="单价：198.0"/>
    </RelativeLayout>

</RelativeLayout>